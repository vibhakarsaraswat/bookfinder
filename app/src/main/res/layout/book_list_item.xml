<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for a single list item that displays details for a booksFoundInSearch -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/averageRating"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:background="@drawable/rating_circle"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:text="4.9" />

    <TextView
        android:id="@+id/title"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/textColorBookTitle"
        android:textSize="16sp"
        tools:text="Auto Biography" />

    <TextView
        android:id="@+id/author"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/textColorBookAuthor"
        android:textSize="16sp"
        tools:text="Vibs"/>

    <TextView
        android:id="@+id/language"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/textColorBookLanguage"
        android:textSize="16sp"
        tools:text="EN"/>

</LinearLayout>